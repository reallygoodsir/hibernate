    <persistence-unit name="pu-single-table">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.really.good.sir.jpa.advancedmappings.singletable.Vehicle</class>
        <class>com.really.good.sir.jpa.advancedmappings.singletable.Car</class>
        <class>com.really.good.sir.jpa.advancedmappings.singletable.Bike</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.archive.autodetection" value="none"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa_single_table"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>

    <!-- ================= JOINED ================= -->
